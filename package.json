{
  "name": "reverie-client",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "better-npm-run build",
    "lint": "tslint src/**/*.ts{,x}",
    "lint:fix": "tslint . --fix",
    "postinstall": "node scripts/postinstall.js",
    "test": "better-npm-run test --watch --watch-extensions ts,tsx",
    "test:ci": "better-npm-run test",
    "test:coverage": "better-npm-run coverage",
    "test:coverage:open": "opener ./coverage/lcov-report/index.html",
    "start": "better-npm-run start",
    "server": "better-npm-run server"
  },
  "betterScripts": {
    "build": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "coverage": {
      "command": "nyc --require ts-node/register --all node_modules/.bin/mocha --require ts-node/register --require ./src/__test__/testHelper.ts --timeout=200 src/**/*.spec.tsx && nyc  --require ts-node/register report --reporter=lcov",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "server": {
      "command": "ts-node ./src/server.ts",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start": {
      "command": "nodemon --exec ts-node src/server.ts",
      "env": {
        "NODE_ENV": "development",
        "PORT": 8080
      }
    },
    "test": {
      "command": "mocha --require ts-node/register --require ./src/__test__/testHelper.ts --reporter min src/**/*.spec.tsx",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:ci": {
      "command": "mocha --require ts-node/register --require ./src/__test__/testHelper.ts --reporter mocha-junit-reporter src/**/*.spec.js",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/threehams/reverie-client.git"
  },
  "dependencies": {
    "axios": "^0.13.1",
    "better-npm-run": "0.0.10",
    "bootstrap": "^4.0.0-alpha.2",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "core-js": "^2.4.1",
    "css-loader": "^0.23.1",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "immutable": "threehams/immutable-js",
    "json-loader": "^0.5.4",
    "node-sass": "^3.8.0",
    "radium": "^0.18.1",
    "react": "^15.3.0",
    "react-addons-shallow-compare": "^15.3.0",
    "react-bootstrap": "^0.30.2",
    "react-dom": "^15.3.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0-alpha.1",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.3",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.2",
    "ts-node": "^1.2.2",
    "typescript": "^2.0.0",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.2.2",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-react": "^6.0.0",
    "eventsource-polyfill": "^0.9.6",
    "mocha": "^3.0.1",
    "mocha-junit-reporter": "^1.11.1",
    "nodemon": "^1.10.0",
    "nyc": "^7.1.0",
    "opener": "^1.4.1",
    "react-addons-perf": "^15.3.0",
    "react-addons-test-utils": "^15.3.0",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "tslint": "^3.14.0",
    "typings": "^1.3.2",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.2"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js",
      "src/__test__/**/*",
      "src/fixtures/**/*",
      "src/*.js"
    ]
  }
}
